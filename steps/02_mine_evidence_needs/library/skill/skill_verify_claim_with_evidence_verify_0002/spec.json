{
  "action": "accept",
  "skip_reason": "",
  "kind": "skill",
  "name": "Verify_Claim_With_Evidence",
  "need_summary": "Verify a claim by locating matching evidence spans.",
  "spec": {
    "goal": "Check whether evidence spans match the claim queries.",
    "inputs": {
      "context": "dict with segments",
      "params": "dict with queries"
    },
    "outputs": {
      "type": "verification_result",
      "payload": {
        "supported": "bool",
        "matches": "list"
      },
      "prov": "list[int]"
    },
    "constraints": [
      "deterministic"
    ],
    "dag": [
      {
        "id": 1,
        "type": "primitive",
        "name": "Extract_Span",
        "inputs": [
          "context",
          "params.queries"
        ],
        "output": "matches"
      }
    ],
    "uses_controlled_llm": false,
    "external": false,
    "source_type": []
  },
  "tests": [
    {
      "name": "test_verify_claim_found",
      "context": {
        "segments": []
      },
      "params": {
        "queries": [
          "baseline"
        ]
      },
      "primitive_stubs": {
        "Extract_Span": {
          "type": "text",
          "payload": {
            "matches": [
              {
                "segment_id": 2,
                "text": "baseline results"
              }
            ]
          },
          "prov": [
            2
          ],
          "status": "ok"
        }
      },
      "expected": {
        "status": "ok",
        "payload_contains": {
          "supported": true
        }
      }
    },
    {
      "name": "test_verify_claim_missing",
      "context": {
        "segments": []
      },
      "params": {
        "queries": [
          "baseline"
        ]
      },
      "primitive_stubs": {
        "Extract_Span": {
          "type": "text",
          "payload": {
            "matches": []
          },
          "prov": [],
          "status": "missing"
        }
      },
      "expected": {
        "status": "missing",
        "payload_contains": {
          "supported": false
        }
      }
    }
  ],
  "dependencies": []
}