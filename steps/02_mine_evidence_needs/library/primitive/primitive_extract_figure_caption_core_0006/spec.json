{
  "action": "accept",
  "skip_reason": "",
  "kind": "primitive",
  "name": "Extract_Figure_Caption",
  "need_summary": "Locate figure captions by id.",
  "spec": {
    "goal": "Find segments containing a figure reference.",
    "inputs": {
      "context": "dict with segments",
      "params": "dict with figure_id"
    },
    "outputs": {
      "type": "text",
      "payload": {
        "figure_id": "str",
        "matches": "list"
      },
      "prov": "list[int]"
    },
    "constraints": [
      "deterministic",
      "no network"
    ]
  },
  "tests": [
    {
      "name": "test_figure_found",
      "context": {
        "segments": [
          {
            "id": 1,
            "text": "Figure 1: Architecture overview."
          }
        ]
      },
      "params": {
        "figure_id": "1"
      },
      "expected": {
        "status": "ok",
        "prov_contains": [
          1
        ],
        "payload_keys": [
          "matches",
          "figure_id"
        ]
      }
    },
    {
      "name": "test_figure_missing",
      "context": {
        "segments": [
          {
            "id": 2,
            "text": "No figure references."
          }
        ]
      },
      "params": {
        "figure_id": "3"
      },
      "expected": {
        "status": "missing",
        "payload_keys": [
          "matches",
          "figure_id"
        ]
      }
    }
  ],
  "dependencies": []
}